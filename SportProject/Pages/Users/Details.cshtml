@page
@model SportProject.Pages.Users.DetailsModel

@{
    ViewData["Title"] = "User Details";
}

<h1>User Details</h1>

<div>
    <h4>User</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.FirstMidName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.FirstMidName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.EnrollmentDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.EnrollmentDate)
        </dd>
    </dl>
    <h4>Fixtures</h4>
    <table class="table">
        <tr>
            <th>Title</th>
            <th>Date</th>
            <th>Result</th>
        </tr>
        @foreach (var item in Model.User.Fixtures)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.FixtureDate.ToShortDateString()</td>
                <td>@item.Result</td>
            </tr>
        }
    </table>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.User?.ID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
